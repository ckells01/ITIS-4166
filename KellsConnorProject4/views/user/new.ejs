<%- include('../partials/header.ejs')%>
<div class = "contents">
    <form action = '/users' method = 'POST'>  
        <h2>Sign Up</h2>
        <label for="firstName">First Name:</label>
        <input type="firstName" id="firstName" name="firstName" required placeholder="Enter First Name" class="formStyle">
        <br><br>
        <label for="lastName">Last Name:</label>
        <input type="lastName" id="lastName" name="lastName" required placeholder="Enter Last Name" class="formStyle">
        <br><br>
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email" required placeholder="Enter Email" class="formStyle">
        <br><br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required placeholder="Enter Password" class="formStyle">
        <br><br>
    </form>
</div>
<%- include('../partials/footer.ejs')%>