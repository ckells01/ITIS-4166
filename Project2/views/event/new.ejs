<%- include('../partials/header.ejs')%>
    <main>
        <div class="contents">
            <form action = '/events' method = 'POST'>
                <h2>Make a New Event</h2>
                <label for="title">Title:</label><br>
                <input type="text" id="title" name="title" required placeholder="Enter Title">
                <br><br>
                <label for="host">Host:</label><br>
                <input type="text" id="host" name="host" required placeholder="Enter Host">
                <br><br>

                <label for="location">Location:</label><br>
                <input type="text" id="location" name="location" required placeholder="Enter Location">
                <br><br>
                <label for="date">Date:</label><br>
                <input type="date" id="date" name="date" required placeholder="Enter Date">
                <br><br>
                <label for="time_start">Start Time:</label><br>
                <input type="time" id="time_start" name="time_start">
                <br><br>
                <label for="time_end">End Time:</label><br>
                <input type="time" id="time_end" name="time_end">
                <br><br>
                <label for="description">Description:</label><br>
                <input type="text" id="description" name="description" required placeholder="Enter Description">
                <p>Category:</p>
                <input type="radio" id="groupPlay" name="category" value="group">
                <label for="groupPlay">Group Play</label><br>
                <input type="radio" id="stream" name="category" value="stream">
                <label for="stream">Livestream</label><br> 
                <br>
                <button>Create Event</button>
            </form>
            <br><br>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>