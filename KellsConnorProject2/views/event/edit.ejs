<%- include('../partials/header.ejs')%>
    <main>
        <div class = "contents">
            <h2>Edit Event</h2>
            <form method = "POST" action="/events/<%= event.id %>?_method=PUT">
                <label for="title">Title:</label><br>
                <input type="text" id="title" name="title" value="<%= event.title %>" class="formStyle">
                <br><br>
                <label for="host">Host:</label><br>
                <input type="text" id="host" name="host" value="<%= event.host %>" class="formStyle">
                <br><br>
                <label for="location">Location:</label><br>
                <input type="text" id="location" name="location" value="<%= event.location %>" class="formStyle">
                <br><br>
                <label for="date">Date:</label><br>
                <input type="date" id="date" name="date" value="<%= event.date %>" class="formStyle">
                <br><br>
                <label for="startTime">Start Time:</label><br>
                <input type="time" id="startTime" name="startTime" value="<%= event.startTime %>" class="formStyle">
                <br><br>
                <label for="endTime">End Time:</label><br>
                <input type="time" id="endTime" name="endTime" value="<%= event.endTime %>" class="formStyle">
                <br><br>
                <label for="description">Description:</label><br>
                <input type="text" id="description" name="description" value="<%= event.description %>" class="formStyle">
                <br><br>
                <label for="category">Category:</label><br>
                <input type="text" id="category" name="category" value="<%= event.category %>" class="formStyle">
                <br><br>
                <button>Update Event</button>
            </form>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>
